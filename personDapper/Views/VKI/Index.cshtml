@{
    ViewData["Title"] = "Home";
}

@model IEnumerable<VKI>

<h2>VKI List</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Kilo</th>
            <th scope="col">Boy</th>
            <th scope="col">Sonuç</th>
            <th scope="col">delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vki in Model)
        {
            <tr>
                <td>@vki.vkiID</td>
                <td>@vki.kilo</td>
                <td>@vki.boy</td>
                <td>@vki.vkiSonuc</td>
                <td><a asp-action="Delete" asp-route-id="@vki.vkiID" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a></td>
            </tr>
        }

    </tbody>
</table>
