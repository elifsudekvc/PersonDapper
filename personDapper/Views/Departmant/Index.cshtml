@{
    ViewData["Title"] = "Home";
}

@model IEnumerable<Departmant>

<h2>Departmant List</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Departmant Name</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var departmant in Model)
        {
                          <tr>
                            <td>@departmant.DepartmantId</td>
                            <td>@departmant.DepartmantName</td>
                            <td><a asp-action="Delete" asp-route-id="@departmant.DepartmantId" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a></td>
                            <td><a asp-action="Update" asp-route-id="@departmant.DepartmantId" class="btn btn-outline-warning"><i class="bi bi-pencil-fill"></i></a></td>
                          </tr>
        }

    </tbody>
</table>