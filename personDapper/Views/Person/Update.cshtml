@model personDapper.Models.Person

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Person</h2>

<form asp-action="Update" method="post">
    <div class="mb-3">
        <label for="FirstName">First Name:</label>
        <input asp-for="FirstName" placeholder="First Name: " />
    </div>
    <div class="mb-3">
        <label for="LastName">Last Name:</label>
        <input asp-for="LastName" placeholder="Last Name: " />
    </div>
    <div class="mb-3">
        <label for="Departmant">Department:</label>
        <input asp-for="Departmant" placeholder="Department: " />
    </div>

    <input type="hidden" asp-for="id" />
    <br />
    <input type="submit" value="Update" class="btn btn-outline-warning" />
    <a asp-action="Index" class="btn btn-outline-secondary">Go Back</a>
</form>
