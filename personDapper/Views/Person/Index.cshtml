@{
    ViewData["Title"] = "Home";
}

@model IEnumerable<Person>

<h2>Person List</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Departmant</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
                        <tr>
                        <td>@person.id</td>
                        <td>@person.FirstName</td>
                        <td>@person.LastName</td>
                        <td>@person.Departmant</td>
                        <td><a asp-action="Delete" asp-route-id="@person.id" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a></td>
                        <td><a asp-action="Update" asp-route-id="@person.id" class="btn btn-outline-warning"><i class="bi bi-pencil-fill"></i></a></td>
                        </tr>
        }

    </tbody>
</table>